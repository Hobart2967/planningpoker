@page "/"
@page "/Index"
@page "/Index/{TeamName}"
@page "/Index/{TeamName}/{MemberName}"

<div class="row">
    <div class="col-md-6 mb-3">
        <JoinTeamPanel TeamName="@TeamName" MemberName="@MemberName" />
    </div>

    <div class="col-md-6 mb-3">
        <CreateTeamPanel TeamName="@TeamName" ScrumMasterName="@MemberName" />
    </div>
</div>

@functions
{
    [Parameter]
    public string? TeamName { get; set; }

    [Parameter]
    public string? MemberName { get; set; }
}
